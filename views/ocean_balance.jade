extends layout
block content
    style(type='text/css')
        .p {
           margin: 2px 0px;
        }
        .balance_container {
            margin-top: 20px;
            border: 1px solid #ddd;
            padding: 0 10px;
        }
       
    h3= label

    p='Address total: ' + data.address_total
    p='SUI total: ' + data.sui_total
    p='OCEAN total: ' + data.ocean_total
    <br/>
    <br/>
    .balance_container
        - for(let i=0; i<data.balance.length; i++) {
            - item= data.balance[i]
            p=`Wallet ${i+1}: ${item.address} (SUI | Ocean) | `
                b=item.sui
                b=item.ocean
        - }